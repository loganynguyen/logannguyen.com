        <style>
            :root {
                --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
                --font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
                --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

                --color-text: hsl(12, 5%, 4%);
                --color-bg: hsl(10, 21%, 95%);
                --color-border: hsl(17, 24%, 90%);
            }

            html {
                font-family: system-ui, sans-serif;
                font-size: var(--font-size-base);
                color: var(--color-text);
                background-color: var(--color-bg);
            }

            body {
                margin: auto;
                padding: 1em;
                max-width: 85ch;
            }

            h1 {
                margin: 0.5rem 0;
            }
        </style>

        <style is:global>
            h1 {
                font-size: var(--font-size-xl);
            }

            h2 {
                font-size: var(--font-size-lg);
            }

            code {
                font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
                    Bitstream Vera Sans Mono, Courier New, monospace;
            }

            /* styles for the gradients */
            :root {
                --text-gradient: linear-gradient(0deg, #193cb8, #7bf1a8);
                --background-gradient: linear-gradient(270deg, #7bf1a8, #193cb8);
            }
            /* old colors: purple (4f39fa), pink (da62c4) */

            .text-gradient {
                font-weight: 900;
                background-image: var(--text-gradient);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-size: 100% 200%;
                background-position-y: 100%;
                border-radius: 0.4rem;
                animation: pulse 7s ease-in-out infinite;
            }

            .background-gradient {
                background-image: var(--background-gradient);
                background-size: 200%;
                background-position-x: 0%;
                animation: background-pulse 7s ease-in-out infinite;
            }

            @keyframes pulse {
                0%,
                100% {
                    background-position-y: 80%;
                }
                50% {
                    background-position-y: 0%;
                }
            }

            @keyframes background-pulse {
                0%,
                100% {
                    background-position-x: 0%;
                }
                50% {
                    background-position-x: 80%;
                }
            }

            /* Show different text depending on which icon is hovered */
            .icon.github:hover ~ .hover-text::after {
                content: "my public code";
